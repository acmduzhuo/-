<!--pages/borrow/borrow.wxml-->
<view>

  <view class='flex-wrp-row'>
    <text class="title">当前借阅</text>

    <button class="but" bindtap="modalTap">历史查询</button>
  </view>

  <view style="position:fixed;bottom:0;right:0"></view>

  <view class='line-first'></view>
  <view wx:if="{{item_now.length==0}}" class='title'>暂无信息</view>
  <!-- view单个节点，block多个节点 -->
  <block wx:for="{{item_now}}" wx:key="id" wx:for-item="item">
    <text class="list" style="-webkit-line-clamp:10;display:block">
      {{item.title}}
      {{item.author}}
      {{item.borrow_date}}
      {{item.back_date}}
      {{item.borrow_cnt}}
      {{item.site}} 
     </text>
    <view class='line'></view>
  </block>

</view>